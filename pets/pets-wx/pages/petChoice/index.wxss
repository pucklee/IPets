.pet-choice {
  display: flex;
  border-top: 1px solid #f1f1f1;
}

.pet-choice .category-box {
  width: 200rpx;
  background-color: #f5f5f5;
  height: 100vh;
}

.pet-choice .category-box text {
  width: 100%;
  height: 80rpx;
  line-height: 100%;
  display: block;
  text-align: center;
}

.pet-choice .category-box text.active {
  background-color: #fff;
  color: #666;
}

.pet-choice .pet-box {
  margin-left: 10rpx;
  flex: 1;
}

.pet-choice .pet-box .all-pet {
  margin-top: 30rpx;
}

.pet-choice .pet-box .pet-label {
  display: inline-block;
  min-width: 120rpx;
  height: 60rpx;
  line-height: 60rpx;
  background-color: #e6f1f1;
  border-radius: 10rpx;
  padding: 0 10px;
  text-align: center;
  color: #666;
  margin-right: 10rpx;
}

.pet-choice .pet-box .pet-label:last-child {
  margin-right: 0;
}
